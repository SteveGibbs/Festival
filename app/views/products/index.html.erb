

<h1>TICKET PURCHASE PAGE UNDER CONSTRUCTION</h1>

<% @products.each do |item| %>
<span class="ticket-heading"><%=item.product_name%></span>
<br>
<br>
<%=item.product_desc1%>
<br>
<%=number_to_currency(item.price, :precision => 0)%>
<ul class="product-buy">
  <li>
    <%=button_to "Buy", items_path(:product_id => item.id), :class=>"product-buy"%>
  </li>
  <li>
    <%= button_to "Admin Edit", edit_product_path(item), method: :get, :class=>"admin" %>
  </li>
</ul>
<br>

<%end%>
